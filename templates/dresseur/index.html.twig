{% extends 'base.html.twig' %}

{% block title %}Dresseur index{% endblock %}

{% block body %}
    <h1>Dresseur index</h1>
    <a href="{{ path('app_equipe_index') }}" style="margin: 0 20px">Voir les équipes</a>
    <a href="{{ path('app_pokemon_index') }}" style="margin: 0 20px">Voir les Pokémons</a>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Age</th>
            <th>Nb_badge</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for dresseur in dresseurs %}
            <tr>
                <td>{{ dresseur.id }}</td>
                <td>{{ dresseur.nom }}</td>
                <td>{{ dresseur.age }}</td>
                <td>{{ dresseur.nbBadge }}</td>
                <td>
                    <a href="{{ path('app_dresseur_show', {'id': dresseur.id}) }}">show</a>
                    <a href="{{ path('app_dresseur_edit', {'id': dresseur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_dresseur_new') }}">Create new</a>
{% endblock %}
